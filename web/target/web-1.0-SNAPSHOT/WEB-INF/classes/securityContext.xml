<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <http auto-config="true">
        <intercept-url pattern="/" access="ROLE_USER" />
        <form-login login-page="/login.jsp" default-target-url="/pages/index.jsp"
                    authentication-failure-url="/login.jsp?error=true" />
        <logout logout-url="/logout"/>
    </http>

    <authentication-manager>
        <authentication-provider>
            <jdbc-user-service id="userDetails" data-source-ref="dataSource"
            users-by-username-query="SELECT login, password FROM userDTO WHERE login=?"
            authorities-by-username-query="SELECT login FROM userDTO WHERE login=?" />
        </authentication-provider>
    </authentication-manager>

</beans:beans>